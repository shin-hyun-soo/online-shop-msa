FROM jenkins/jenkins:lts
USER root

RUN apt-get update && apt-get install -y \
    docker.io \
    curl \
    unzip

RUN curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip" \
    && unzip awscliv2.zip \
    && ./aws/install \
    && rm -rf aws awscliv2.zip

USER jenkins
